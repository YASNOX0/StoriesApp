<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.fragment.FilterHistoiresDilalogFragment">

    <Spinner
        android:id="@+id/spinner_filterParNomAuteur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:popupBackground="@drawable/spinner_popup_style"
        android:dropDownWidth="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <Spinner
        android:id="@+id/spinner_filterParCategorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:popupBackground="@drawable/spinner_popup_style"
        android:dropDownWidth="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <Spinner
        android:id="@+id/spinner_filterParPays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:popupBackground="@drawable/spinner_popup_style"
        android:dropDownWidth="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

</LinearLayout>