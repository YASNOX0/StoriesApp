<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@color/light_grey">

            <ImageButton
                android:id="@+id/ib_modifierAuteur"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:backgroundTint="@color/dark_shadow"
                app:srcCompat="@drawable/update_icon"
                android:scaleX="1"
                android:scaleY="1"
                android:scaleType="fitXY"
                android:layout_marginStart="5dp"
                app:tint="@android:color/holo_green_light" />

            <ImageButton
                android:id="@+id/ib_supprimerAuteur"
                android:layout_width="35dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/delete_forever_icon"
                android:layout_gravity="end"
                android:backgroundTint="@color/dark_shadow"
                android:scaleX="1"
                android:scaleY="1"
                android:scaleType="fitXY"
                android:layout_marginEnd="5dp"
                app:tint="@android:color/holo_red_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_nomAuteur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tetstfdfgdfdffdfdfdffgdfdsfdffsdfsdf"
                    android:gravity="center"
                    android:padding="8dp"
                    android:maxLines="2"
                    android:layout_marginTop="10dp"
                    android:textSize="16.7sp"
                    android:textStyle="bold|italic"/>

                <TextView
                    android:id="@+id/tv_dateNaissance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="TextView" />
            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>